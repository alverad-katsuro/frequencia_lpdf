<div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <%= image_tag('logo.png', :class=>"mx-auto h-32 w-auto")%>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900 mb-5">
        Esqueceu sua senha?
      </h2>
      <% if (request.path.eql?(new_user_session_path)) %>
        <p class="mt-2 text-center text-sm text-gray-600 mb-5">
          Ou
          <%= link_to('cadastre-se', new_registration_path(resource_name), :class=>"font-medium text-indigo-600 hover:text-indigo-500") %>        
        <% end %>
    </div>
    <%= turbo_frame_tag resource, target: '_top' do %>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name),:class=>"mt-8 space-y-6", html: { method: :post }) do |f| %>
        <div class="rounded-md shadow-sm -space-y-px">
          <div>
            <%= f.label :email, :class=> "sr-only", :for=>"email-address" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"email-address", :class=>"appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm",:placeholder=>"Email address" %>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, :class=>"h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded", :name=>"remember-me", :id=>"remember-me" %>
              <%= f.label :remember_me, "Lembrar-me",  :class=>"ml-2 block text-sm text-gray-900" %>
            </div>
          <% end %>
          <div class="text-sm">
            <%= link_to('Esqueceu sua senha?', new_password_path(resource_name), :class=>"font-medium text-indigo-600 hover:text-indigo-500") %>        
          </div>
        </div>
        <br>
          <div class="actions">
            <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                <!-- Heroicon name: solid/lock-closed -->
                <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                </svg>
              </span>
            <%= f.submit "Send me reset password instructions", "data-turbo-frame": "_top" %>
            </button>
          </div>
      <% end %>
    <% end %>
  </div>
</div>

